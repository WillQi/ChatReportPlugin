<!DOCTYPE html>
<html>
    <head>
        <title>ChatReport | Dashboard</title>
        <include-html("../utils/header.html") />
    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>Identification</th>
                    <th>Status</th>
                    <th>Opened</th>
                </tr>
            </thead>
            <tbody>
                <for|report| of=input.reports>
                    <tr>
                        <td><a href="/dashboard/reports/" + report.id >${report.reportedUUID}</a></td>
                        <td>
                            <if(report.assignedTo === input.user.id)>
                                Assigned
                            </if>
                            <else-if(report.assignedTo !== null)>
                                Claimed
                            </else-if>
                            <else>
                                Open
                            </else>
                        </td>
                        <td>${report.createdAt}</td>
                    </tr>
                </for>
            </tbody>
        </table>
    </body>
</html>